      <param-value>value</param-value>
    </init-param>
    <init-param>
      <param-name>key2</param-name>
      <param-value>value2</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>sendServlet</servlet-name>
    <url-pattern>/send</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>getMessageServlet</servlet-name>
