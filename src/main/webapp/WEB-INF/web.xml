    <servlet-name>default</servlet-name>
    <url-pattern>/resources/*</url-pattern>
  </servlet-mapping>


  <!-- *** LISTENERS *** -->
  <listener>
    <listener-class>com.sandbox50572.AppContext</listener-class>
  </listener>
</web-app>
